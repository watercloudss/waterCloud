<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.watercloud.webmagic.mapper.SysPermissionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.watercloud.webmagic.entity.SysPermission">
        <id column="id" property="id" />
        <result column="parent_id" property="parentId" />
        <result column="path" property="path" />
        <result column="component" property="component" />
        <result column="redirect" property="redirect" />
        <result column="alwaysShow" property="alwaysshow" />
        <result column="name" property="name" />
        <result column="title" property="title" />
        <result column="icon" property="icon" />
        <result column="roles" property="roles" />
        <result column="permission" property="permission" />
        <result column="noCache" property="noCache" />
        <result column="sort" property="sort" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="create_by" property="createBy" />
        <result column="update_by" property="updateBy" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, parent_id, path, component, redirect, alwaysShow, name, title, icon, roles, permission, noCache, create_time, update_time, create_by, update_by
    </sql>
    <select id="getUserPermission" parameterType="Integer" resultType="String">
        SELECT
            p.permission
        FROM
            sys_permission p
        INNER JOIN sys_role_permission rp ON p.id = rp.permission_id
        WHERE
            EXISTS (
                SELECT
                    1
                FROM
                    sys_role r
                INNER JOIN sys_user_role ur ON r.id = ur.role_id
                INNER JOIN sys_user u ON u.id = ur.user_id
                WHERE
                    rp.role_id = r.id
                AND u.id = #{userId}
            )
    </select>

    <select id="getSysPermissionByUserId" parameterType="Integer" resultType="com.watercloud.webmagic.entity.SysPermission">
                 WITH RECURSIVE sp AS (
            SELECT
                a.*
            FROM
                sys_permission a
            WHERE
                id IN ( SELECT rp.permission_id FROM sys_user_role ur INNER JOIN sys_role_permission rp ON ur.role_id = rp.role_id WHERE user_id = #{userId} )
                AND a.STATUS = '1' UNION ALL
            SELECT
                b.*
            FROM
                sys_permission b
                INNER JOIN sp sp1 ON b.parent_id = sp1.id
                AND b.STATUS = '1'
            ) SELECT
            *
        FROM
            sp
        ORDER BY
	     sort
    </select>
</mapper>
